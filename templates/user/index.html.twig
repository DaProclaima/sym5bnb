{% extends 'base.html.twig' %}

{% block title %}Page de {{user.fullName}}{% endblock %}

{% block body %}

<div class="container">
    <div class="row align-items-center">
        <div class="col-3 text-center">
            <img src="{{user.picture}}" class="avatar mb-3" alt="Avatar de {{user.fullName}}">
            <br>
            <span class="badge badge-primary">{{user.ads | length}} annonces</span>
            <div class="col-9">
                <h1>{{user.fullName}}</h1>
            </div>
        </div>

        {{user.description | raw}}

        <hr>

        <h2>Les annonces de {{user.fullname}}</h2>

        {% if user.ads  | length > 0 %}
        
            <div class="row">
                {% for ad in user.ads %}
                    {% include "ad/_ad.html.twig" %}
                {% endfor %}

            </div>
        {% else %}
            <div class="alert alert-warning">
            <p>{{user.fullname}} n'a pas encore d'annonces sur le site !</p>
            </div>
        
        {% endif %}

    </div>
</div>
{% endblock %}
