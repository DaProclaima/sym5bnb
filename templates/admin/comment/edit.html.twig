{% extends "admin/base.html.twig" %}

{% block title %}Modification du commentaire
	{{comment.id}}
{% endblock %}

{% form_theme form _self %}
{% block body %}

	<div class="container">
		<h1 class="my-5">Modification du commentaire nº{{comment.id}}</h1>

		<div class="alert alert-info">
			<div><strong>Annonce liée : </strong>{{comment.ad.title}}</div>
			<div><strong>Autheur : </strong>{{comment.author.fullName}}</div>
			<div><strong>Date de création : </strong>{{comment.createdAt | date('d/m/Y H:i')}}</div>
			<div><strong>Note donnée : </strong>{{comment.rating}}</div>
		</div>
	
		{{form_start(form)}}
		{{form_widget(form)}}
		<button type="submit" class="btn btn-primary ml-2 mt-4"><i class="fas fa-check"></i>Enregistrer les mofifications</button>
		{{form_end(form)}}
	</div>
{% endblock %}
