{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>
    <table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>
                <div class="text-center">
                    RÃ©servations
                </div>
            </th>
            <th>
                <div class="text-center">
                    Note
                <div class="text-center">
            </th>
            <th>
                <div class="text-center">
                    Actions
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
    {% for ad in ads %}
        <tr>
            <th>{{ad.id}}</th>
            <th>{{ad.title}}</th>
            <th><img src="{{ad.author.picture}}" alt="Avatar de {{ad.author.fullName}}" class="avatar avatar-micro mr-2">{{ad.author.fullName}}</th>
            <th>
                 <div class="text-center">
                    <span class="badge badge-primary rounded">{{ad.bookings | length}}</span>
                </div>
            </th>
            <th>
                <div class="text-center">
                    <span class="badge badge-primary rounded">{{ad.avgRatings | number_format(1, ',', ' ') }}</span>
                </div>
            </th>
            <th>
                <div class="text-center">
                    <a href="{{path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary" alt="editer"><i class="fas fa-edit"></i></a>
                    <a href="{{path('admin_ads_delete', {'id': ad.id}) }}" class="btn btn-danger" alt="supprimer"><i class="fas fa-trash"></i></a> 
                </div>
            </th>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
