{% extends "base.html.twig" %}
{% block title %}Creation d'une annonce{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1>Créer une nouvelle annonce</h1>

        {{form_start(form)}}
        {{form_widget(form)}}
        <button type="submit" class="btn btn-primary">Créer la nouvelle annonce</button>
         {{form_end(form)}}
    
    </div>
{% endblock %}

{% block _ad_images_widget %}
    <p>Ici, vous pouvez ajouter vos propres images !</p>
    {{ form_widget(form) }}
    <div class="form-group">
    {# button[type=button]#add-image.btn.btn-primary #}
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{form_widget(form)}}
{% endblock %}



{% block _ad_images_entry_widget %}
<div class="form-group" id="block_{{id}}">
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col">
                    {{form_widget(form.url)}}
                </div>
                <div class="col">
                    {{form_widget(form.caption)}}
                </div>
            </div>
        </div>
        <div class="col-2">
            <button type="button" data-action = "delete" data-target = "#block_{{id}}" class="btn btn-danger">X</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    $('#add-image').click(function(){

        // First step: I pick up the fields' number I am about to create
        const index = $('#ad_images div.form-group').length;
        

        // Now I want the entries' prototype

        const tmpl = $('#ad_images').data('prototype').replace(/__name__/g, index);

        // console.log(tmpl);
        $('#ad_images').append(tmpl);

        // here we handle the delete button
        handleDeleteButtons();
    });

    function handleDeleteButtons() {
        $('button[data-action="delete"]').click(function(){
            const target = this.dataset.target;
            // console.log(target);
            $(target).remove();
        })
    }

    // everytime the page loads we call the function
    handleDeleteButtons();

</script>
{% endblock %}